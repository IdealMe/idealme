.container         
  = @lecture.content.html_safe if @lecture.content

  - @lecture.payloads.each do |payload|
    - if payload.intended_type == IM_PAYLOAD_VIDEO
      .flowplayer.color-dark.play-button{'data-swf' => '/assets/flowplayer.swf', 'data-key' => '$324032410720287', 'data-ratio' => "0.63"}
        %video
          %source{type: 'video/mp4', src: "#{payload.payload.expiring_url(1000)}"}
