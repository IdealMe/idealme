.promo-section
  .container
    .background
    .main-message
      %h3.title{:title => 'Better information, faster'}
        = image_tag('landings/better_info_txt.png')
      .message Collect gems of wisdom and find courses to help reach your goals
      = link_to("GET STARTED (IT'S FREE)", new_user_session_path, :class => 'btn-black btn-round')
    .cards
      .card.card-top
        = image_tag('landings/pic_top.jpg', :width => 168)
        .description 10 BEST SURF TIPS
      .card.card-1
        = image_tag('landings/pic_1.jpg', :width => 118)
        .description WRITE A BOOK
      .card.card-2
        = image_tag('landings/pic_2.jpg', :width => 97)
      .card.card-3
        = image_tag('landings/pic_3.jpg', :width => 100)
