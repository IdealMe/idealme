
<div id="topbar" ></div>
<div id="wrap">
  <div id="outer" class="">
    <div id="container">
      <div class="header-fragment-content">
        <% fragment = Fragment.where(slug: "funnel-header").first %>
        <%= fragment.html.html_safe if fragment %>
      </div>
      <div class="main-fragment-content">
        <%= @fragment.html.html_safe if @fragment %>
      </div>

      <% if current_user && current_user.striped? %>
        <div class="action-buttons">
        <%= link_to "Add to cart", purchase_continuity_offer_path(plan: 2), :method => :post, :class => "btn btn-primary btn-red purchase-offer-btn-2" %>
        <br/>
        7 Day FREE trial, then $19.95 month
        <br/>
        <%= link_to "No thanks, I don't want a FREE trial of the Insider Circle", '/action-sidekick', class: "decline-link" %>
        <%= render partial: "partials/safesitecertified" %>
      </div>
    <% else %>
        <div id="form-container">
        <%= render partial: "orders/form" %>
        <%= render partial: "partials/safesitecertified" %>
        <a href="/action-sidekick" class="btn btn-primary btn-decline-purchase">No thanks</a>
      </div>
    <% end %>
    </div>
  </div>
  <div id="footer">
    <div id="footertext"> </div>
  </div>
  <div style="clear:both;"></div>
</div>
</div>
