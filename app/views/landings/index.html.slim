.promo_section
  .container.promo-height
    .intro-wp
      h2
        | Live Your Ideal Life
      .cnt
        .video
          iframe allowfullscreen="" frameborder="0" height="346" width="510" src="//fast.wistia.net/embed/iframe/8cwpldg4xw" allowtransparency="true" scrolling="no" class="wistia_embed" name="wistia_embed"
          span.video-bg &nbsp;
        .text
          p
            | Sign up now to start your Ideal Me adventure...
            .divider
          p
            | Get the <em>Design Your Ideal Life</em> workbook, free. A $47 value!
        .join-box
          = render partial: "partials/aweber_form"
