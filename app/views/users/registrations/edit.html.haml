.container
  .row
    .span12
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f|
        %fieldset
          #legend
            %legend Account
        .form-horizontal
          .control-group
            .profile-picture.control-label
              = image_tag "profile-image.png"
          = f.input :avatar, label: false
          = f.input :username, :autofocus => true
          = f.input :firstname
          = f.input :lastname
          = f.input :email
          - if resource.access_instructor
            = f.input :instructor_about, :class => 'tinymce'
        .form-inline
          = f.input :current_password, :placeholder => "we need your current password"
          = f.input :password, :placeholder => "leave blank if you don't want to change it"
          = f.input :password_confirmation
          .clear
          = f.submit 'Save', :class => 'btn btn-red'