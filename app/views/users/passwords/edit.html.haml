.container
  .row
    .span12
      = formatted_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => 'form-horizontal'}) do |f|
        %fieldset
          #legend
            %legend Change my password
        = f.hidden_field :reset_password_token
        = f.password_field :password, :autofocus => true
        = f.password_field :password_confirmation
        = f.submit 'Change my password', :class => 'btn btn-success'
        - if controller_name != 'sessions'
          = link_to "Sign in", new_session_path(resource_name), :class => 'btn'
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "Sign up", new_registration_path(resource_name), :class => 'btn'