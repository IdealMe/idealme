.container
  .row
    .span12
      = formatted_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => 'form-horizontal'}) do |f|
        %fieldset
          #legend
            %legend Forgot my password
        = f.email_field :email, :autofocus => true
        = f.submit 'Send me reset password instructions', :class => 'btn btn-success'
        - if controller_name != 'sessions'
          = link_to "Sign in", new_session_path(resource_name), :class => 'btn'
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "Sign up", new_registration_path(resource_name), :class => 'btn'