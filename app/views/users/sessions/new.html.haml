.sign-in-section
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
    .modal-box
      .sign-in-box
        .message-box
          Sign in to your Ideal Me account
        .control-group
          = f.label :email, 'Username', :class => 'control-label'
          .controls
            = f.email_field :email, :autofocus => true, :value => 'bill@idealme.com'
        .control-group
          = f.label :passwors, 'Password', :class => 'control-label'     
          .controls
            = f.password_field :password
            = f.text_field :password, :value => 'passpass'
        - if devise_mapping.rememberable? 
          .control-group.remember-me-checkbox
            .controls
              %label.checkbox 
                = f.check_box :remember_me
                Stay signed in     
              - if devise_mapping.recoverable? && controller_name != 'passwords'
                = link_to 'Forgot?', new_password_path(resource_name), :class => 'forgot-link'   
              
        .signin
          .controls 
            = f.submit 'SIGN IN', :class => 'btn btn-red'
  .footer
    Or sign up with:
    .oauth      
      = link_to('Facebook', user_omniauth_authorize_path(:facebook), :class => 'btn btn-blue')
      = link_to('Twitter', user_omniauth_authorize_path(:facebook), :class => 'btn btn-lightblue')