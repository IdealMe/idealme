.goal-card                          
  .options{:style=>'width: 16px;margin: 10px;position: absolute;'}
    .dropdown
      = image_tag 'users/drop_down.png', :data => { :toggle => 'dropdown' }
      %ul.dropdown-menu{:style=>'border-radius:0px'}      
        %li
          %a{:href => "#", :tabindex => "-1"} Mark as complete  
        %li.divider
        %li
          %a{:href => "#", :tabindex => "-1"} Archive
  .avatar
    = link_to image_tag(goal_user.goal.avatar.url(:full)), goal_path(goal_user)
  .name
    = goal_user.goal.name
  .bottom_box
    .check-ins
      .counter 
        = goal_user.checkins.length
      check ins
    .gems-collected
      .counter 0
      gems collected
    .gems-created
      .counter 0
      gems created
    .clear