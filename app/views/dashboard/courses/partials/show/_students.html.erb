<%= form_tag(add_student_dashboard_course_path, :method => 'post') do %>
    <div class="row collapse">
      <%= hidden_field_tag('course_id', @course.id) %>
      <div class="ten columns">
        <%= text_field_tag('login', nil, :placeholder => 'Login') %>
      </div>
      <div class="two columns">
        <%= submit_tag('Add to course', :class => 'button') %>
      </div>
    </div>
<% end %>
<table class="twelve">
  <thead>
  <tr>
    <th>User</th>
    <th>Email</th>
  </tr>
  </thead>
  <tbody>
  <% @course.users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.firstname} #{user.lastname}", user_path(user) %></td>
        <td><%= user.email %></td>
      </tr>
  <% end %>
  </tbody>
</table>