<h2>Banners</h2>
<% has_banner = false %>
<% if !@swipe.swipe_banner_1.path.nil? %>
    <div class="row">
      <div class="nine columns">
        <%= image_tag(@swipe.swipe_banner_1.url, :alt => @swipe.name) %>
      </div>
      <div class="three columns">
        <%= text_area_tag 'swipe_banner_1', (link_to(image_tag(@swipe.swipe_banner_1.url), "[AFFILIATE LINK]")), :rows => 7, :class => 'three' %>
      </div>
    </div>
    <hr />
    <% has_banner = true %>
<% end %>

