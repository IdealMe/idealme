<h2>Email</h2>
<% has_email = false %>
<% if !@swipe.swipe_email_1.nil? && @swipe.swipe_email_1.strip.length > 0 %>
    <p><strong>Email 1</strong></p>
    <% if !@swipe.swipe_email_1_subject_1.nil? && @swipe.swipe_email_1_subject_1.strip.length > 0 %>
        <p><strong>Subject 1</strong></p>
        <%= text_field_tag 'swipe_email_1_subject_1', @swipe.swipe_email_1_subject_1, :class => 'twelve' %>
    <% end %>

    <% if !@swipe.swipe_email_2_subject_1.nil? && @swipe.swipe_email_1_subject_2.strip.length > 0 %>
        <p><strong>Subject 2</strong></p>
        <%= text_field_tag 'swipe_email_1_subject_2', @swipe.swipe_email_1_subject_2, :class => 'twelve' %>
    <% end %>

    <% if !@swipe.swipe_email_1_subject_3.nil? && @swipe.swipe_email_1_subject_3.strip.length > 0 %>
        <p><strong>Subject 3</strong></p>
        <%= text_field_tag 'swipe_email_1_subject_3', @swipe.swipe_email_1_subject_3, :class => 'twelve' %>
    <% end %>
    <p><strong>Body</strong></p>
    <%= text_area_tag 'swipe_email_1', @swipe.swipe_email_1, :rows => 10, :class => 'twelve' %>
    <hr/>
    <% has_email = true %>
<% end %>

