= formatted_form_for(@lecture, url: url, html: {class: 'form-horizontal'}) do |f|
  %fieldset
    #legend
      %legend Lecture
  = f.text_field :name
  = f.select :section_id, Section.all.collect { |section| ["#{section.name} - #{section.course.name}", section.id] }, {}, class: 'select2'
  = f.text_area :description, class: 'tinymce', rows: 4
  = f.text_area :content, class: 'tinymce'
  = f.submit 'Save', class: 'btn btn-success'
  = link_to 'Back', admin_lectures_path, class: 'btn'                     
  - if @lecture.persisted?
    = link_to 'Payloads', admin_lecture_payloads_path(@lecture), class: 'btn'
