.container
  .thank_you_box.modal_box
    .thanks_msg_box
      %div Thank you, your order has been placed and you are enrolled in this course!
      = link_to 'GO TO COURSE', course_path(@market.course), :class => 'btn btn-red'
         
    .testimonials_box
      .testimonial
        .user_pic   
          = image_tag @market.avatar(:thumb)
        .testimonial_body
          I just enrolled: 
          = @market.course.name 
          by 
          = @market.course.owner.fullname
          on IdealMe
        .clear
      .share_btn.btn-group
        %button.btn.dropdown-toggle{"data-toggle" => "dropdown"} 
          SHARE
          %span.caret
        .dropdown-menu
          .social_box
            .social_icon.twitter_icon
            .social_name twitter
            .turquoise_bg.counter 261
            .clear
          .social_box
            .social_icon.facebook_icon
            .social_name facebook
            .dark_blue_bg.counter 16
            .clear
          .social_box
            .social_icon.google_plus_icon
            .social_name google plus
            .red_bg.counter 3
            .clear
          .social_box
            .social_icon.pinterest_icon
            .social_name pinterest
            .soft_blue_bg.counter 3
            .clear
          .social_box
            .social_icon.stumble_icon
            .social_name stumble upon
            .red_1_bg.counter 0
            .clear            
          .social_box
            .social_icon.twitter2_icon
            .social_name twitter
            .light_blue_bg.counter 0
            .clear
    .clear
.offer_section
  %h3.also_viewed_header Customers who took this course also viewed
  %table             
    - @markets = Market.limit(4).all
    - @markets.each do |market|
      =render :partial => 'partials/course_card', :locals => {:market => market}
