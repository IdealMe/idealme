.resources-index, .resources-my_goals, .resources-show, .resources-goal
  /* override bootstrap styles
  @import url('https://fonts.googleapis.com/css?family=Oswald:300,400:latin,latin-ext')

  .navbar-form input, .form-inline input
    width: auto


  h1, h2, h3, .highlight, .navbar a, #masthead h4
    font-family: 'Oswald',arial narrow,sans-serif

  h2
    font-weight: 600
    color: #4d4d4d
    font-size: 36px
    line-height: 44px

  .article-summary
    margin-left: 7px
    color: #4d4d4d
    font-size: 18px

  .cover
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    -webkit-background-size: cover
    -moz-background-size: cover
    -o-background-size: cover
    background-size: cover
    background-position: center

  #masthead
    min-height: 199px
    background-image: url(<%= asset_path 'bunting-flag.png' %>)
    height: 203px
    h1
      font-size: 55px
      line-height: 1
      color: #4d4d4d
      margin-top: 50px
      font-weight: 700
    .well
      margin-top: 12px
      background-color: #fAFAFA
      //border-color: #ebebeb
      color: #4d4d4d
      min-height: 127px
      .download-cta
        float: right
        position: relative
        top: 15px
        right: 25px
        font-size: 28px
        font-weight: 600
        height: 0px

  #topPanel
    padding-top: 0px
    padding-left: 22px
    padding-right: 22px
    .panel-body
      padding-top: 0px

  .navbar.affix
    position: fixed
    top: 0
    width: 100%

  .top-spacer
    background-color: #ffffff
    height: 40px

  a
    color: #223344
    text-decoration: none
    &:hover
      color: #223344
      text-decoration: none

  .icon-bar
    background-color: #fff

  @media screen and (min-width: 768px)
    #masthead h1
      font-size: 80px

  .navbar-bright
    background-color: #111166
    color: #fff
    margin-bottom: 0
    border-width: 0
    a, .navbar-brand
      color: #ccccdd
      font-size: 14px
      text-transform: uppercase
      letter-spacing: .08em

  #masthead h4
    color: #ccccdd
    font-size: 14px
    text-transform: uppercase
    letter-spacing: .08em

  .navbar-bright li > a:hover
    background-color: #000044

  .dropdown-menu
    min-width: 250px

  .caret
    color: #fff

  .navbar-toggle
    color: #fff
    border-width: 0
    &:hover
      background-color: #fff

  .panel
    border-color: transparent
    border-radius: 0

  .thumbnail
    margin-bottom: 8px

  .img-container
    overflow: hidden
    height: 170px
    img
      min-width: 280px
      min-height: 180px
      max-width: 380px
      max-height: 280px

  .txt-container
    overflow: hidden
    height: 100px

  .panel .lead
    overflow: hidden
    height: 90px

  .label-float
    margin: 0 auto
    position: absolute
    top: 0
    z-index: 1
    width: 100%
    opacity: .9
    padding: 6px
    color: #fff

  .offset
    margin-top: 20px

  .left-menu
    @include float-left
    margin: 0
    padding-left: 0
    li
      @include float-left
      margin: 0 10px
      a
        @include hex(#777777)
        @include fs(14px)
        font-weight: 400
        @include lh(64px)
        @include upper
        @include block
        text-decoration: none
        height: 64px
        &:hover, &.active
          border-bottom: 3px solid #ff6766









