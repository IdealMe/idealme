.resources-index, .resources-my_goals, .resources-show, .resources-goal
  /* override bootstrap styles
  @import url('https://fonts.googleapis.com/css?family=Oswald:300,400:latin,latin-ext')

  .navbar-form input, .form-inline input
    width: auto


  h1, h2, h3, .highlight, .navbar a, #masthead h4
    font-family: 'Oswald',arial narrow,sans-serif

  h1
    font-weight: 600
    font-size: 36px
    margin-left: 10px

  h2
    font-weight: 600
    color: #4d4d4d
    font-size: 36px
    line-height: 44px

  .article-summary
    margin-left: 7px
    color: #4d4d4d
    font-size: 18px

  .cover
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    -webkit-background-size: cover
    -moz-background-size: cover
    -o-background-size: cover
    background-size: cover
    background-position: center

  #masthead
    min-height: 199px
    background-image: url(<%= asset_path 'ripples.jpg' %>)
    height: 203px
    h1
      font-size: 55px
      line-height: 1
      color: #fff
      margin-top: 50px
      font-weight: 700
    .well
      margin-top: 12px
      background-color: #fAFAFA
      min-height: 127px
      .download-cta
        float: right
        position: relative
        top: 15px
        right: 25px
        font-size: 28px
        font-weight: 600
        height: 0px
        color: #4d4d4d
    .well:hover
      background: #fff
      cursor: pointer

  #topPanel
    padding-top: 0px
    padding-left: 22px
    padding-right: 22px
    .panel-body
      padding-top: 0px

  .navbar.affix
    position: fixed
    top: 0
    width: 100%

  .top-spacer
    background-color: #ffffff
    height: 40px

  a
    color: #223344
    text-decoration: none
    &:hover
      color: #223344
      text-decoration: none

  .icon-bar
    background-color: #fff

  @media screen and (min-width: 768px)
    #masthead h1
      font-size: 80px

  .navbar-bright
    background-color: #111166
    color: #fff
    margin-bottom: 0
    border-width: 0
    a, .navbar-brand
      color: #ccccdd
      font-size: 14px
      text-transform: uppercase
      letter-spacing: .08em

  #masthead h4
    color: #ccccdd
    font-size: 14px
    text-transform: uppercase
    letter-spacing: .08em

  .navbar-bright li > a:hover
    background-color: #000044

  .dropdown-menu
    min-width: 250px

  .caret
    color: #fff

  .navbar-toggle
    color: #fff
    border-width: 0
    &:hover
      background-color: #fff

  .panel
    border-color: transparent
    border-radius: 0

  .thumbnail
    margin-bottom: 8px

  .img-container
    overflow: hidden
    height: 170px
    img
      min-width: 280px
      min-height: 180px
      max-width: 380px
      max-height: 280px

  .txt-container
    overflow: hidden
    height: 100px

  .panel .lead
    overflow: hidden
    height: 90px

  .label-float
    margin: 0 auto
    position: absolute
    top: 0
    z-index: 1
    width: 100%
    opacity: .9
    padding: 6px
    color: #fff

  .offset
    margin-top: 20px

  .left-menu
    @include float-left
    margin: 0
    padding-left: 0
    li
      @include float-left
      margin: 0 10px
      a
        @include hex(#777777)
        @include fs(14px)
        font-weight: 400
        @include lh(64px)
        @include upper
        @include block
        text-decoration: none
        height: 64px
        &:hover, &.active
          border-bottom: 3px solid #ff6766

.resources-show
  #masthead
    height: 500px
    max-height: 500px
    h1
      font-size: 39px
      line-height: 1.4
      color: white
      font-weight: 700
      margin: 18% 0
      padding: 0 8%
      text-align: center
      letter-spacing: -1px
  .post-body
    letter-spacing: .01rem
    font-weight: 400
    font-style: normal
    font-size: 22px
    line-height: 1.75
    margin: 2% 15%

  .post-comments
    margin: 2% 15%
    .new-comment
      border-bottom: 1px solid #ebeae5
      margin-bottom: 10px
      .comment-content
        width: 100%
        height: 56px
        padding-left: 10px
        margin-bottom: 10px
        @include bg(white)
        @include fs(12px)
        @include lh(26px)
        @include border-radius(0)
        border: 1px solid #ebebeb
        @include box-shadow(none)
        @include float-left
      .btn
        //@include float-left
        width: 100%
        padding: 7px 25px
        @include float-left
        background: #fafafa
        border: 1px solid #ebebeb
        text-transform: uppercase
        color: #777
    .comments
      .comment
        @include border-radius(6px)
        @include bg(white)
        border: 1px solid #ebeae5
        padding: 10px 10px 5px 10px
        @include m_b(5px)
        .owner-avatar
          width: 35px
          @include border-radius(2px)
          @include float-left

        .comment-body, .comment-reply-body
          @include float-left
          @include m_l(13px)
          width: 90%
          .comment-card
            @include float-left
            @include fs(12px)
            .owner-name
              @include float-left
              @include hex(#999999)
              @include m_r(13px)
              @include m_b(4px)
              @include bold
            .comment-date
              @include float-left
              @include hex(#cccccc)
            .comment-content
              @include hex(#424242)
          .replies-count
            @include float-right
            @include bg(image-url("icons/comments_icon.png") no-repeat 0 1px)
            padding: 0px 0px 0px 20px
            @include fs(10px)
            @include hex(#999999)
            margin-top: 9px
            margin-right: 4px
        .comment-reply-body
          width: 355px
      .comment-replies
        margin-left: 15px
        margin-top: 10px
        .comment-reply
          @include fs(12px)
          .owner-name
            @include hex(#999999)
            @include m_r(13px)
            @include m_b(4px)
            @include bold

